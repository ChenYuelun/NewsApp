<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.newsapp.view.NoSlideViewPager
        android:id="@+id/content_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <RadioGroup
        android:id="@+id/rg_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_tab_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/rb_home"
            style="@style/content_rb"
            android:drawableTop="@drawable/rb_home_drawabletop_selector"
            android:text="主页" />

        <RadioButton
            android:id="@+id/rb_news"
            style="@style/content_rb"
            android:drawableTop="@drawable/rb_news_drawabletop_selector"
            android:text="新闻" />


        <RadioButton
            android:id="@+id/rb_setting"
            style="@style/content_rb"
            android:drawableTop="@drawable/rb_setting_drawabletop_selector"
            android:text="设置" />


    </RadioGroup>
</LinearLayout>